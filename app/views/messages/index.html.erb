<div class="panel panel-default">
	<div class="panel-heading">
		メッセージ一覧
	</div>
	<div class="panel-body">
		<% @messages.each do |message| %>
		<span class="label label-info col-sm-1"><%= "#{message.name.center(10)} さん" %></span>
		<span class="label label-warning col-sm-1"><%= "年齢 #{message.age.to_s.rjust(2,"0")}歳" %></span>
		<span class="col-sm-7"><%= message.body %></span>
		<span class="col-sm-2">
	[<%= link_to " edit", edit_message_path(message) %> | <%= link_to "destroy ", message, method: :delete, data: {confirm: '削除してもよろしいですか？' }%>]
		</span>
		<br>
		<% end %>
	</div>
</div>

<%# 部分テンプレートを読み込む %>
<%= render 'form' %>